    </div>
    <div class="panel-body">
      <pre>
      var ddisplay=document.querySelector(".jumbotron h2");
        var array=[]
        var re = /,/gi;
      function myFunction(id) {
        if (id===123){
          array=[]
          ddisplay.textContent="Do Some Maths";
        } else if (id===345) {

          ddisplay.textContent=eval(array.join().replace(re,""));
          array[0]=eval(array.join().replace(re,""));
          array.length=1;
        } else if (id===999) {
          array.pop();
          ddisplay.textContent=array.join().replace(re,"");
        } else{
            array.push(id);
            ddisplay.textContent=array.join().replace(re,"");
        }
      }
    </pre>
    </div>
  </div>
